# Pendulumedu Quiz Scraper - Environment Variables
# Copy this file to .env and fill in your actual credentials

# Pendulumedu.com Login Credentials
LOGIN_EMAIL=your_email@example.com
LOGIN_PASSWORD=your_password_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHANNEL=currentadda

# Optional: Online Storage (GitHub Gist)
# Create TWO Gists at https://gist.github.com/:
# 1. State Gist with file named scraped_urls.json, content: {"processed_urls": []}
# 2. Session Gist with file named session.json, content: {}
# Then create a Personal Access Token with 'gist' scope at https://github.com/settings/tokens
GIST_TOKEN=your_github_personal_access_token
GIST_ID=your_state_gist_id_here
SESSION_GIST_ID=your_session_gist_id_here

# Optional: Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# PDF Generation Configuration
# Theme selection: 'light', 'classic', or 'vibrant'
PDF_THEME=light

# SVG Background Configuration
# Enable or disable SVG backgrounds in PDFs (true/false)
ENABLE_SVG_BACKGROUNDS=true

# SVG background type: 'wave', 'blob', or 'none'
SVG_BACKGROUND_TYPE=wave
